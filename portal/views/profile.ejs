        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#001e5799', endColorstr='#001e5799',GradientType=0 ); /* IE6-9 */

        height: 100%;
      }
      #user{
        font-size: 36pt;
      }
     
      .wrapper {
       text-align: center;
      }

      .buttons{
        /*margin-right: 5%;*/
        float:right;
      }
   


    </style> 
    <style type="text/css"></style>
  </head>
  <body>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
      
      <div class="container" >
        
        <div class="row" >
          <div class="col-md-12">
           <a href="#Profile" style= "width:150px; height:50px;float:left; margin-top:20px" class="btn btn-primary btn-block"><span class="fa fa-gear"></span> Profile Information </a>
           <a href="#Directions" style= "width:150px; height:50px; float:left; margin-top:20px; margin-left:5px" class="btn btn-primary btn-block"><span class="fa fa-gear"></span> Directions </a> 
            </div>
        </div>   
        <div class="row" >    
        
          <div class="col-md-12">
          
          
            <div class="panel panel-default">

              <div class="panel-body">

                  <div class="row">

                      <div class="col-xs-12 col-md-8" style = "font-size:30px" >
                           <h1 class="user-name" id="user"><strong> Hello Mr. <%= user.name %></strong></h1>
                           <p><strong>Username: </strong> <%= user.userName %> </p>
                           <p><strong>Email: </strong> <%= user.email %> </p>
                           <p><strong>IP: </strong><%=user.IP %></p>
                           <p><strong>Type: </strong><%=user.Type %></p>
                           <button type="button" style= "width:100px; height:50px; margin-top:20px" class="btn btn-primary btn-block"><span class="fa fa-gear"></span> Edit Profile </button>
                      </div><!--/col-->          
                      <div class="col-xs-12 col-sm-4 text-center">
                          <img src="http://4.bp.blogspot.com/-zsbDeAUd8aY/US7F0ta5d9I/AAAAAAAAEKY/UL2AAhHj6J8/s1600/facebook-default-no-profile-pic.jpg" style= "width:300px; height:400px;" alt="" class="center-block img-square img-responsive">
                      </div><!--/col-->
                  </div><!--/row-->
              </div><!--/panel-body-->
            </div><!--/panel-->
          </div>
        </div>
 
        <div class="row"  style="margin-top:200px;">    
        
          <div class="col-md-12">
          
          
            <div class="panel panel-default" id="Directions" >

              <div class="panel-body">

                  <div class="row">

                      <div class="col-xs-12 col-md-8" style = "font-size:30px" >
                            <h1 class="user-name" id="user"><strong> Hello Mr. <%= user.name %></strong></h1>
                           <p><strong>Username: </strong> <%= user.userName %> </p>
                           <p><strong>Email: </strong> <%= user.email %> </p>
                           <p><strong>IP: </strong><%=user.IP %></p>
                           <p><strong>Type: </strong><%=user.Type %></p>
                           <button type="button" style= "width:100px; height:50px; margin-top:20px" class="btn btn-primary btn-block"><span class="fa fa-gear"></span> Edit Profile </button>
                      </div><!--/col-->          
                      
                  </div><!--/row-->
              </div><!--/panel-body-->
            </div><!--/panel-->
          </div>
        </div>


      </div>
  </body>
</html>